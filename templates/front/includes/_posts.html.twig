        <div class="col-md-8">
            {% for post in posts %}
                
				<div class="card mb-4">
					<div class="card-header"><h4><h3>{{post.getTitle()}}</h3></h4></div>
					<div class="card-body">
                    <img src="{{post.getPhoto()}}"  class="img-fluid" alt="Responsive image">
						<p class="p-2">{{post.getbody()}} <a href="{{path('post_details')}}">...readMore</a> </p>
					</div>
                    <span class="card-header">Posted ON: {{post.createdAt().format('Y-m-d')}}</span>
				</div>
                
            {% endfor %}
            {{ knp_pagination_render(posts) }}
        </div>